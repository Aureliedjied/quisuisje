{% extends 'base.html.twig' %}

{% block title %}Forum
{% endblock %}

{% block body %}
	<div class="container mx-auto my-8 px-4">
		<h1 class="text-center text-4xl font-bold mb-8 text-white-800">
			Bienvenue sur le Forum !
		</h1>

		<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
			{% for topic in topics %}
				{# Utilisation de la classe "even" pour alterner les couleurs #}
				<div class="p-6 rounded-lg shadow-md {{ loop.index is even ? 'bg-gray-100' : 'bg-white' }}">
					<h2 class="text-lg font-bold mb-4 text-gray-800">{{ topic.title }}</h2>
					<p class="text-gray-600">{{ topic.content }}</p>

					{# Boutons de r√©action #}
					<div class="flex items-center mt-4 space-x-4">
						<button class="text-gray-600 hover:text-blue-500">
							üëç J'aime ( r√©actions √† ajouter + tard )
						</button>
					</div>
					<a href="{{ path('app_forum_show', {'id': topic.id}) }}" class="text-blue-500 hover:underline mt-2 block">Voir</a>
				</div>
			{% endfor %}
		</div>

		<a href="#" class="block mt-8 bg-blue-500 text-white rounded-full px-6 py-3 hover:bg-blue-600">Nouveau Topic</a>
	</div>
{% endblock %}
