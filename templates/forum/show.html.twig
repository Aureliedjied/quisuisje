{% extends 'base.html.twig' %}

{% block title %}Voir le Sujet
{% endblock %}

{% block body %}
	<div class="container mx-auto my-8 px-4">
		<h1 class="text-center text-4xl font-bold mb-8 text-gray-800">
			Sujet du Forum
		</h1>

		<div class="bg-white p-6 rounded-lg shadow-md">
			<h2 class="text-lg font-bold mb-4 text-gray-800">{{ topic.title }}</h2>
			<p class="text-gray-600">{{ topic.content }}</p>

			{# Boutons de r√©action #}
			<div class="flex items-center mt-4 space-x-4">
				<button class="text-gray-600 hover:text-blue-500">
					üëç J'aime (r√©actions √† ajouter plus tard)
				</button>
			</div>

			{# Section des commentaires #}
			<h3 class="text-lg font-bold mt-8 mb-4 text-gray-800">Commentaires</h3>
			<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
				{% for loopIndex in 1..3 %}
					<div class="bg-white p-4 rounded-lg shadow-md">
						<p class="text-gray-600">Commentaire
							{{ loopIndex }}</p>
					</div>
				{% endfor %}
			</div>

			{# Formulaire de commentaire ( √† am√©liorer ? )#}
			<form class="mt-8">
				<label for="comment" class="block text-sm font-medium text-gray-700">Ajouter un commentaire :</label>
				<textarea id="comment" name="comment" rows="4" class="mt-1 p-2 block w-full border border-gray-300 rounded-md"></textarea>
				<button type="submit" class="mt-4 bg-blue-500 text-white rounded-full px-6 py-3 hover:bg-blue-600">Envoyer</button>
			</form>
		</div>
	</div>
{% endblock %}
