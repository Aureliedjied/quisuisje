{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	{% if error %}
		<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
			{{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
	{% endif %}
	<div class="flex items-center justify-center h-screen">
		<div class="bg-white rounded-lg p-8 max-w-md w-full">
			<h1 class="text-center text-3xl font-semibold mb-6 text-black">Veuillez vous connecter</h1>
			<form action="{{ path('app_security_login') }}" method="post">
				<div class="mb-4">
					<label for="username" class="block text-gray-600 text-sm font-medium mb-1">Email</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}" class="w-full px-3 py-2 border rounded-md text-black focus:outline-none focus:border-blue-500" required>
				</div>

				<div class="mb-4">
					<label for="password" class="block text-gray-600 text-sm font-medium mb-1">Mot de passe</label>
					<input type="password" id="password" name="_password" class="w-full px-3 py-2 border rounded-md text-black focus:outline-none focus:border-blue-500" required>
				</div>

				<button type="submit" class="w-full bg-cream text-black py-2 px-4 rounded-full hover:bg-cream-dark hover:text-white focus:outline-none focus:border-cream focus:ring focus:ring-cream">
					Connexion
				</button>
				{% if not app.user %}
					<p class="text-gray-600 text-center mt-4">Vous n'avez pas de compte ?
						<a href="{{ path('app_register') }}" class="text-blue-500">Inscrivez-vous ici</a>.</p>
				{% endif %}
			</form>
		</div>
	</div>
{% endblock %}
